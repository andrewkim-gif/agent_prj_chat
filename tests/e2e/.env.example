# E2E Test Environment Variables Example
# Copy this file to .env.test and adjust values as needed

# Test Environment
TEST_ENV=development
TEST_BASE_URL=http://localhost:3009
TEST_TIMEOUT=30000

# Browser Settings
HEADLESS=true
SLOW_MO=0
VIDEO_MODE=retain-on-failure
SCREENSHOT_MODE=only-on-failure

# API Settings
MOCK_API=true
API_TIMEOUT=10000
API_BASE_URL=http://localhost:3009/api

# Database (if needed for integration tests)
MONGODB_URL=mongodb://localhost:27017/arachat-test

# Test User Data
TEST_USER_EMAIL=test@example.com
TEST_WALLET_ADDRESS=0x1234567890123456789012345678901234567890

# CI/CD Settings
CI=false
PARALLEL_WORKERS=1
RETRIES=0

# Debug Settings
ENABLE_TRACE=false
ENABLE_DEBUG_LOGS=false

# Performance Test Settings
PERFORMANCE_BUDGET_MS=3000
LIGHTHOUSE_THRESHOLD=90