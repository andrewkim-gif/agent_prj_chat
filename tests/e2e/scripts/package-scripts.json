{
  "description": "Additional npm scripts to add to app/package.json for E2E testing",
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:setup": "../tests/e2e/scripts/test-setup.sh",
    "test:e2e:chat": "playwright test tests/e2e/specs/chat",
    "test:e2e:wallet": "playwright test tests/e2e/specs/wallet",
    "test:e2e:insights": "playwright test tests/e2e/specs/insights",
    "test:e2e:integration": "playwright test tests/e2e/specs/integration",
    "test:e2e:chrome": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:safari": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:e2e:performance": "playwright test --grep=\"@performance\"",
    "test:e2e:smoke": "playwright test --grep=\"@smoke\"",
    "test:e2e:critical": "playwright test --grep=\"@critical\"",
    "test:e2e:ci": "playwright test --reporter=github",
    "test:e2e:trace": "playwright test --trace=on",
    "test:e2e:video": "playwright test --video=on"
  },
  "devDependencies_to_add": {
    "@playwright/test": "^1.55.1"
  },
  "installation_note": "The @playwright/test dependency is already present in the main package.json"
}